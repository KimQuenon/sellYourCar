{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}
    <div class="container full">
        <div class="row">
            <div class="col-md-6 offset-md-3 bg-light p-3">
                <h1>Connexion</h1>

                {# gestion des erreurs #}
                {% if hasError %}
                    <div class="alert alert-danger">
                        Une erreur est survenue, le nom d'utilisateur ou le mot de passe est invalide.
                    </div>
                {% endif %}

                <form action="{{path('account_login')}}" method="POST">
                    <div class="form-group my-2">
                    {# Name précis "_username" requis par Symfo #}
                        <label for="email">E-mail</label>
                        <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse email..." required value="{{username}}">
                    </div>
                    <div class="form-group my-2">
                    {# Name précis "_password" requis par Symfo #}
                        <label for="password">Mot de passe:</label>
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Votre mot de passe..." required>
                    </div>
                    <div class="form-group my-2">
                        <button type="submit" class="btn btn-success my-3">Connexion</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
{% endblock %}