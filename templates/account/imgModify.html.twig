{% extends "base.html.twig" %}

{% block title %}Modifier Avatar{% endblock %}

{% block body %}
    <div class="container mt-4  full">
        <h1>Modification de l'avatar de {{app.user.firstName}} {{app.user.lastName}}</h1>
        {% if app.user.picture %}
        <img src="/uploads/{{app.user.picture}}" alt="avatar de {{app.user.email}}">
        {% endif %}
        {{form_start(myForm)}}

            {{form_widget(myForm)}}
            <button type="submit" class="btn btn-warning">Confirmez la modification de l'avatar</button>
        {{form_end(myForm)}}
    </div>

{% endblock %}