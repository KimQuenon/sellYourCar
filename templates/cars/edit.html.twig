{% extends "base.html.twig" %}


{% block title %}Modification de la voiture: {{car.brand}} {{car.model}}{% endblock %}

{% form_theme myForm _self %}

{% block body %}

    <div class="container">
        <h1>Modification de l'annonce : <strong>{{car.brand}} {{car.model}}</strong></h1>

        {{form_start(myForm)}}

            {{form_widget(myForm)}}
            <button type="submit" class="btn btn-warning mt-3">Modifier</button>


        {{form_end(myForm)}}


    </div>

{% endblock %}

{% block _car_images_widget %}
    {# Définition du champ annonce_image, la variable form correspond au hamp annonce_image #}
    <p>Ici, vous pouvez ajouter vos propres images</p>
    {{form_widget(form)}}
    <input type="hidden" id="widgets-counter" value="0">
    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-primary">Ajouter une image</button>
    </div> 

{% endblock %}

{% block _car_images_entry_row %}
    {{form_widget(form)}}
{% endblock %}

{% block _car_images_entry_widget %}
    <div class="form-group my-2" id="block_{{id}}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{form_widget(form.url)}}
                        {{form_errors(form.url)}}
                    </div>
                    <div class="col">
                        {{form_widget(form.caption)}}
                        {{form_errors(form.caption)}}</div>
                </div>
            </div>
            <div class="col-2">
                <button type="button" class="btn btn-danger" data-action="delete" data-target="#block_{{id}}">X</button>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        const addImage = document.querySelector('#add-image')
        addImage.addEventListener('click',()=>{
            // compter combien j'ai d form-group pour les indices ex: annonce_image_0_url
            const widgetCounter = document.querySelector("#widgets-counter")
            const index = +widgetCounter.value // le + permet de transformer en nombre, value rends tjrs un string 
            const carImages = document.querySelector("#car_images")
            // recup le prototype dans la div
            const prototype = carImages.dataset.prototype.replace(/__name__/g, index) // drapeau g pour indiqur que l'on va le faire plusieurs fois 
            carImages.insertAdjacentHTML('beforeend', prototype)
            widgetCounter.value = index+1
            handleDeleteButtons() //  pour mettre à jour la table deletes
        })
        const updateCounter = () => {
            const count = document.querySelectorAll("#car_images div.form-group").length
            document.querySelector("#widgets-counter").value = count 
        }
        const handleDeleteButtons = () => {
            let deletes = document.querySelectorAll("button[data-action='delete']")
            deletes.forEach(button => {
                button.addEventListener('click', ()=>{
                    const target = button.dataset.target
                    const elementTarget = document.querySelector(target)
                    if(elementTarget){
                        elementTarget.remove() // supprimer l'éléménet
                    }
                })
            })
        
        }
        updateCounter()
        handleDeleteButtons()
    
    </script>
{% endblock %}