{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block body %}
    <div class="container mt-4 ">
        <div class="row">
            <h1 class="mb-3">Messagerie</h1>
            <table class="table table-striped">
                <thead>
                    <tr class="table-active">
                        <th class="text-center">Nom</th>
                        <th class="text-center">Mail</th>
                        <th class="text-center">Message</th>
                        <th class="text-center">Actions</th>
                    </tr>
                {% for message in messages %}
                    <tr>
                        <td class="align-middle">{{message.name}}</td>
                        <td class="align-middle">{{message.email}}</td>
                        <td class="align-middle">{{message.message | raw | nl2br}}</td>
                        <td class="align-middle text-center">
                            <a href="mailto:{{message.email}}" type="button" class="btn btn-primary">RÃ©pondre</a>
                            <a href="{{path('message_delete', {'id':message.id})}}" type="button" class="btn btn-danger mt-3">Supprimer</button>
                        </td>
                    </tr>
                {% endfor %}
                </thead>
            </table>
        </div>
    </div>
{% endblock %}